<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_main_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back_main">


    <ImageView
        android:id="@+id/noDataMainImg"
        android:layout_width="141dp"
        android:layout_height="133dp"
        android:layout_alignStart="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_alignEnd="@+id/chart"
        android:layout_alignBottom="@+id/chart"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="180dp"
        android:alpha="0.1"
        app:srcCompat="@drawable/ic_emptyimg" />

    <TextView
        android:id="@+id/noDataMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noDataMainImg"
        android:layout_alignTop="@+id/noDataMainImg"
        android:layout_alignEnd="@+id/noDataMainImg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:text="No Data. Add Expense"
        android:textAlignment="center" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="344dp"
        android:layout_height="369dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appButtonMainFragmentSwitchEI"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_add_expense_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="To Income"
        android:textAllCaps="false"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:alpha="0.25"
        android:text="Expenses"
        android:textSize="24sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="524dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:srcCompat="@drawable/plus1"
        android:foreground="?attr/selectableItemBackground"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAddExpense2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:srcCompat="@drawable/plus1"
        android:foreground="?attr/selectableItemBackground"/>


</RelativeLayout>