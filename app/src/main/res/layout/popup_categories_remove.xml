<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/cardview_dark_background"
    android:alpha="0.9">


    <EditText
        android:id="@+id/editTextPopupCategoriesRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Category Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCategoriesPopupRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="UsuÅ„"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/custom_add_expense_button"
        app:layout_constraintEnd_toEndOf="@+id/editTextPopupCategoriesRemove"
        app:layout_constraintStart_toStartOf="@+id/editTextPopupCategoriesRemove"
        app:layout_constraintTop_toBottomOf="@+id/editTextPopupCategoriesRemove"/>



</androidx.constraintlayout.widget.ConstraintLayout>